{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "declarationDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": false,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/__mocks__", "**/__tests__"]
}
